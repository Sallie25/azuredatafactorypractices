{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "deeptechdatafactory"
		},
		"deeptech_AzureBlobStorage_LS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'deeptech_AzureBlobStorage_LS'"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/fitnessgympipeline')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "This pipeline shows the ETL process carried out on  fitness_gym dataset in completion of the task assigned by the deeptech data engineering programme. Here we configure a copy activity in ADF to transfer data from a source to sink container in azure blob storage",
				"activities": [
					{
						"name": "Activity 1",
						"description": "Move data from input to output container",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "ExcelSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								}
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobStorageWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "fitness_gym_input_dataset",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "fitnessgym_sink_dataset",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/fitness_gym_input_dataset')]",
				"[concat(variables('factoryId'), '/datasets/fitnessgym_sink_dataset')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/fitness_gym_input_dataset')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "deeptech_AzureBlobStorage_LS",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "Excel",
				"typeProperties": {
					"sheetName": "Fitness table",
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "Fitness_Membership_Analytics_Dataset.xlsx",
						"container": "input"
					},
					"firstRowAsHeader": true
				},
				"schema": [
					{
						"name": "ID",
						"type": "String"
					},
					{
						"name": "customerpk",
						"type": "String"
					},
					{
						"name": "age",
						"type": "String"
					},
					{
						"name": "membership_type",
						"type": "String"
					},
					{
						"name": "visit_per_week",
						"type": "String"
					},
					{
						"name": "Days_of_week",
						"type": "String"
					},
					{
						"name": "attend_group_lesson",
						"type": "String"
					},
					{
						"name": "avg_time_check_in",
						"type": "String"
					},
					{
						"name": "avg_time_check_out",
						"type": "String"
					},
					{
						"name": "duration_in_gym_minutes",
						"type": "String"
					},
					{
						"name": "has_drink_subscription",
						"type": "String"
					},
					{
						"name": "personal_training",
						"type": "String"
					},
					{
						"name": "uses_sauna",
						"type": "String"
					},
					{
						"name": "self_identified_gender",
						"type": "String"
					},
					{
						"name": "subscription_price",
						"type": "String"
					},
					{
						"name": "subscription_model",
						"type": "String"
					},
					{
						"name": "adjusted_price",
						"type": "String"
					},
					{
						"name": "discount type_fk",
						"type": "String"
					},
					{
						"name": "discount_rate",
						"type": "String"
					},
					{
						"name": "final_price",
						"type": "String"
					},
					{
						"name": "access_hours",
						"type": "String"
					},
					{
						"name": "Location_fk",
						"type": "String"
					},
					{
						"name": "join_date",
						"type": "String"
					},
					{
						"name": "personal_training_hours",
						"type": "String"
					},
					{
						"name": "multi_location_access",
						"type": "String"
					},
					{
						"name": "last_visit_date",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/deeptech_AzureBlobStorage_LS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/fitnessgym_sink_dataset')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "deeptech_AzureBlobStorage_LS",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "sink.csv",
						"container": "output"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/deeptech_AzureBlobStorage_LS')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/deeptech_AzureBlobStorage_LS')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('deeptech_AzureBlobStorage_LS_connectionString')]"
				}
			},
			"dependsOn": []
		}
	]
}